@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>

<html>
<head>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Signin")
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<!-- This snippet uses Font Awesome 5 Free as a dependency. You can download it at fontawesome.io! -->

<body>
	<!-- Login Container -->
	<div class="container">
		<div class="row">
			<div class="col-lg-3 col-md-2"></div>
			<div class="col-lg-6 col-md-8 login-box">
				<div class="col-lg-12 login-key">
					<img src="~/Content/Images/AssetsDistributionLogo (2).png" />
				</div>
				<!-- Container Title-->
				<div class="col-lg-12 login-title">
					<br /><br />
					Assets Distribution Login
				</div>
				<!--Login Form-->
				<section>
					<div class="col-lg-10 login-form">
						<div class="col-lg-12 login-form">
							<form>
								<div class="form-group">
									<label class="form-control-label">USERNAME</label>
									<input type="text" class="form-control">
								</div>
								<div class="form-group">
									<label class="form-control-label">PASSWORD</label>
									<input type="password" class="form-control">
								</div>
								<!--Login Button -->
								<div class="col-lg-12 loginbttm">
									<div class="col-lg-6 login-btm login-text">
										<!-- Error Message -->
									</div>
									<div class="col-lg-6 text-center login-btm login-button ">
										<button type="submit" class="btn btn-outline-primary btn-lg">LOGIN</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</section>
	<div class="col-lg-3 col-md-2"></div>
	</div>
	</div>





</body>

</html>